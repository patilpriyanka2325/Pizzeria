@page
@model Pizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>
    <form method="post" class="mx-auto px-5 pt-5 pb-5 mt-5 mb-5 col-4 rounded-5 bg-light">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name..."/>
        <br/>

        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce"/>Tomato Sauce<br/>
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese<br />
        <input type="checkbox" asp-for="Pizza.PeriPeri" placeholder="PeriPeri" />PeriPeri<br/>
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni" />Peperoni<br/>
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />Mushroom<br />
        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" />Tuna<br />
        <input type="checkbox" asp-for="Pizza.Chicken" placeholder="Chicken" />Chicken<br />
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" />Pineapple<br />

        <button class="btn btn-primary" type="submit">Order My Pizza!</button>
    </form>
</div>
